#include <iostream>

class Stack {
public:
    Stack();
    ~Stack();
    void push( void *data );
    void *pop();
protected:
    // Element struct needed only internally
    typedef struct Element {
        struct Element *next;
        int data;
    } Element;
    Element *head;
};

Stack::Stack() {
    head = NULL;
    return;
}

Stack::~Stack() {
    while( head ) {
        Element *next = head->next;
        delete head;
        head = next;
    }
    return;
}

