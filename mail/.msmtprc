defaults
tls on
# make sure auto_from is off so that 'from' setting works as expected
auto_from off
logfile ~/.msmtp.log

account gmail
host smtp.gmail.com
tls on
tls_certcheck on
auth on
from ja.nguyen@gmail.com
user ja.nguyen
passwordeval gpg2 -q --for-your-eyes-only --no-tty -d ~/.authinfo.gpg | awk '/machine imap.gmail.com login ja.nguyen@gmail.com/ {print $NF}'
port 587
tls_trust_file /usr/local/etc/openssl/cert.pem

account work
host smtp.office365.com
protocol smtp
tls on
tls_starttls on
tls_certcheck on
auth on
from james@whoshere.net
user james@whoshere.net
passwordeval gpg2 -q --for-your-eyes-only --no-tty -d ~/.authinfo.gpg | awk '/machine smtp.office365.com login james@whoshere.net/ {print $NF}'
port 587
tls_trust_file /usr/local/etc/openssl/cert.pem

account default : gmail

