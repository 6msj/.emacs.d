(require 'evil)
(require '$2 nil t)

(defconst evil-collection-$2-maps '($2-mode-map))

(defun ${1:`(j|yasnippet-expansion-buffer-name)`}-setup ()
  "Set up `evil' bindings for $2."
  (evil-collection-define-key 'normal '$2-mode-map
    $0))

(provide '$1)
